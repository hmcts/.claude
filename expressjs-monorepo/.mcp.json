{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "env": {}
    },
    "jira": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--env-file", "${CLAUDE_PROJECT_DIR}/.claude/.mcp.env",
        "-e", "ENABLED_TOOLS=jira_get_issue,jira_download_attachments,jira_search",
        "-v", "${CLAUDE_PROJECT_DIR}:/workspace",
        "-w", "/workspace",
        "ghcr.io/sooperset/mcp-atlassian:latest"
      ]
    }
  }
}
